<script>
	function resend() {
		$('#submit_resend').submit();
	}
	function permission() {
		$('#submit_permission').submit();
	}
	
	function requestManager() {
		alert('You do not have an authority.\nPlz, Repuest to manager.');
	};

	window.onload = function() {
		// 태그 검색
		var tags = [];
		var tag = [];
		<%for(var i=0; i < results.length; i++) {%>
			tag = '<%=results[i].hashtag%>';
			tags.push(tag);
		<%}%>
		var joinTag = tags.join();
		var arrTag = joinTag.split(',');

		var content = [];
		for(var j = 0; j < arrTag.length; j++) {
			content.push({ title: arrTag[j] })
		}

		$('.ui.search')
			.search({
			source: content
			})
		;
	}
</script>
