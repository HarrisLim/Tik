<!DOCTYPE html>
<html>
	<head>
		<%- include header.ejs %>
		<script>
			<%- include searchTag.js%>
		</script>

		<style>
		</style>

		<title>Main</title>
	</head>
	<body>
		<form method="get" method="/process/searched" id="searched">
			<input type="hidden" value="" id="gettag" name="gettag">
		</form>
		<div class="ui search" style="float:left">
			<div class="ui icon input right">
				<input class="prompt" type="text" placeholder="Search tag...">
				<i class="search icon"></i>
			</div>
			<div class="results"></div>
		</div>
		<%- include rightTop.ejs %>
		<br>
		<div style="text-align:center;margin-top:-20px;padding-bottom:40px">
			<%=gettag%>
			<hr width="300px">
		</div>
		<div class="ui two column grid" style="padding:0 3% 1%">
			<%- include pagination.ejs%>
		</div>
		<br>
		<div style="text-align:center;padding:3% 0 10% 0">
				<% 
					for(var j=0; j<results.length/4; j++) {
				%>
					<a href="/process/main/<%= j+1%>?gettag=<%=gettag%>" style="padding:3%"><%= j+1%></a>&emsp;
				<%
					}
				%>
		</div>
	</body>
</html>