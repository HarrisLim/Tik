<!DOCTYPE html>
<html>
	<head>
		<%- include header.ejs %>
		<script>
			window.onload = function() {
				$('#rangestart').calendar({
					type: 'date',
					endCalendar: $('#rangeend')
				});
				$('#rangeend').calendar({
					type: 'date',
					startCalendar: $('#rangestart')
				});
			}

			function view(num) {
				<%# alert(num); %>

				$('#postnum').val(num);

				$('#frm').submit();	
			};

			function tag() {
				var tags = [];
				$.ajax({
					url: '/process/tag',
					dataType: 'json',
					type: 'POST',
					data: {
						'msg':$('#tag').val(),
						'result':$('#result').text(),
					},
					success: function(result) {
						if ( result['result'] == true ) {
							$('#result').html(result['tag']);
							$('#tempTag').val(result['tag']);
							tags.push($('#tempTag').val());
							for(var i =0; i < tags.length; i++){
								console.log(tags[i]);
							}
						}
					}
				});
				$('#tag').val('');
			};

		</script>
	</head>
	<body>
