<!DOCTYPE html>
<html>
	<head>
		<%- include header.ejs %>
		<script>
			window.onload = function() {
				$('#rangestart').calendar({
					type: 'date',
					endCalendar: $('#rangeend')
				});
				$('#rangeend').calendar({
					type: 'date',
					startCalendar: $('#rangestart')
				});
			}

			function view(num) {
				<%# alert(num); %>

				$('#postnum').val(num);

				$('#frm').submit();	
			};
		</script>
	</head>
	<body>
		<%
			var curHowmanydays = results.howmanydays;
			var curNickname = results.nickname;
			var curInsid = results.insid;
			var curTitle = results.title;
			var curPicpath = results.picpath;
			var curPost = results.post;
			var curGetwant = results.getwant;
			var curHashTag = results.hashtag;
			var curViews = results.views
			var curCreated_at = results.created_at;
			var curUpdated_at = results.updated_at;
			var curPostnum = results.postnum;
			var writtenTld = results.tld;
		%>
			<%# 이것은 date format을 바꿔주는 것. %>
		<%
			function formatDate(date) {
		    var d = new Date(date),c                                                                                           
		    month = '' + (d.getMonth() + 1),
		    day = '' + d.getDate(),
		    year = d.getFullYear();

		    if (month.length < 2) month = '0' + month;
		    if (day.length < 2) day = '0' + day;

		    return [year, month, day].join('-');
			};
		%>
		<a href="/process/main"><h3>Talk<br>T ik</h3></a>
		<hr>
		<h1 style="text-align:center">Edit post !</h1>
	   	<form name="frm" id="frm" action="/process/showpost" method="post">
			<input type="hidden" name="postnum" id="postnum">
		</form>
	   	<form method="post" action="/process/editpost">
   		<div class="ui container">
			<div style="text-align:right; padding-top:20px">
				<a class="ui image label">
					Created_Date
					<div class="detail"><%=formatDateHelper(curCreated_at)%></div>
				</a>
				<a class="ui image label">
					Views
					<div class="detail"><%= curViews%></div>
				</a>
			</div>
		</div><br>
		<div class="ui container">
			<div class="ui form">
				<h1 style="text-align:center"><input type="text" name="title" value="<%= curTitle%>"></h1><br>
			</div>
			<div style="text-align:right">
				<div class="ui container">
					<div class="ui form">
						<div class="two fields">
							<div class="field">
							<label>Start date</label>
								<div class="ui calendar" id="rangestart">
									<div class="ui input left icon">
										<i class="calendar icon"></i>
										<input type="text" placeholder="Start" id="startDate" name="startDate" value="<%=startDate%>">
									</div>
								</div>
							</div>
							<div class="field">
							<label>End date</label>
								<div class="ui calendar" id="rangeend">
									<div class="ui input left icon">
										<i class="calendar icon"></i>
										<input type="text" placeholder="End" id="endDate" name="endDate" value="<%=endDate%>">
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
				Written by <i class="<%=writtenTld%> flag"></i><%= curNickname%> !</h4>
			</div>
		</div>
		<h3>Post</h3>
		<div class="ui container">
			<div class="ui form">
				<input type="text" name="picpath" value="<%= curPicpath%>"><br>
				<textarea name="post"><%= curPost%></textarea>
			</div>
		</div>
		<h3>Hashtag</h3>
		<div class="ui container">
			<div class="ui form">
				<input type="text" name="hashtag" value="<%= curHashTag%>">
			</div>
		</div>
		<br>
		<div class="ui labeled button" tabindex="0">
			<div class="ui blue button">
				<i class="plane icon"></i> I wanna go
			</div>
			<a class="ui basic blue left pointing label">
			<%=curGetwant%>
			</a>
		</div>
		<h3>Instagram</h3>
		<div class="ui container">
			<label><a href="https://www.instagram.com/<%=curInsid%>" target="_blank"><i class="instagram icon"></i> <%= curInsid %></a></label>
		</div><br>
			<input type="submit" value="Update : )">
			<a href="/process/showpost?postnum=<%=curPostnum%>"><input type="button" value="Cancle : )"></a>
		</form><br>
	</body>
</html>