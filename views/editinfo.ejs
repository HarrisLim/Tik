<!DOCTYPE html>
<html>
	<head>
		<%- include header.ejs %>
		<script>
			<%- include editinfo_control.js%>
		</script>

		<style>
			td input {
				width : 200px;
			}
		</style>
		<title>My info</title>
	</head>
	<body>
		<%
			var curNickname = results[0][0].nickname;
			var curEmail = results[0][0].email;
			var curCountry = results[0][0].country;
			var curAgegroup = results[0][0].agegroup;
			var curInsid = results[0][0].insid;
			var curTld = results[0][0].tld;
		%>
		<a href="/process/main"><h3>Talk<br>T ik</h3></a>
		<hr>
		<br> <h2>Hello. <i class="<%=curTld%> flag"></i><%= curNickname%> !</h2>
		<br><br>
		<a href="/process/mypost">My post</a>
		<br><br><a href='/process/myinfo'>My info</a>
		<p>
		<form action="/process/showpost" method="post">
			<input type="hidden" id="ages" value="<%= curAgegroup%>">
		</form>
		<input type="hidden" value="test" id="tempNick">
		<input type="hidden" value="firPW" id="tempFirPW">
		<input type="hidden" value="secPW" id="tempSecPW">
		<input type="hidden" value="<%=arrNick%>">
		<form method="post" action="/process/editinfo" id="editinfo">
			<table>
				<tr>
					<td><label>Nickname : </label></td>
					<td><input type="text" name="nickname" value="<%= curNickname%>" id="nickname" placeholder="can not fill some special character.">
					<input type="button" value="Duplication check" onClick="checkNickname()"></td>
				</tr>
				<tr>
					<td><label>Email : </label></td>
					<td><%=curEmail%><input type="hidden" name="username" id="email" value="<%=curEmail%>"></td>
				</tr>
				<tr>
					<td><label>originPassword : </label></td> 
					<td><input type="password" name="password" value="" id="oriPassword"><div style="color:red"><%=checkoriginpw%></div></td>
				</tr>
				<tr>
					<td><label>Password : </label></td>
					<td><input type="password" id="firPW"></td>
				</tr>
				<tr>
					<td><label>Password (repeat) : </label></td>
					<td><input type="password" name="passwd" id="secPW"><input type="button" value="Check password" onClick="checkPW()"></td>
				</tr>
				<tr>
					<td><label>Country : </label></td>
					<td><input type="text" name="country" value="<%= curCountry%>"></td>
				</tr>
				<tr>
					<td><label>Age group : </label></td>
					<td>
						<div class="ui fluid search selection dropdown">
							<input type="hidden" name="agegroup">
							<i class="dropdown icon"></i>
							<div class="default text" id="ageSel">Select Age group</div>
							<div class="menu">
								<div class="item" data-value="10s">10s</div>
								<div class="item" data-value="20s">20s</div>
								<div class="item" data-value="30s">30s</div>
								<div class="item" data-value="40s">40s</div>
								<div class="item" data-value="50s">50s</div>
								<div class="item" data-value="60s">60s</div>
								<div class="item" data-value="70s">70s</div>
								<div class="item" data-value="80s">80s</div>
								<div class="item" data-value="90s">90s</div>
								<div class="item" data-value="100s">100s</div>
							</div>
						</div>
					</td>
				</tr>
				<tr>
					<td><label>Instagram ID : </label></td>
					<td><input type="text" name="insid" value="<%= curInsid%>"></td>
				</tr>
				<tr>
					<td><br><br><input type="button" value="Cancel my membership. : (" onClick="cancelMembership()"></td>
				</tr>
			</table>
			<p><br>
			<input type="button" value="submit : )" onClick="checkEmpty()">
			<a href="/process/myinfo"><input type="button" value="Cancle : )"></a>
		</form>
		<form method="post" action="/process/cancelmember" id="cancelMember">
			<input type="hidden" name="curEmail" value="<%=curEmail%>">
			<input type="hidden" name="cancelId" value="<%=results[0].id%>">
		</form>
	</body>
</html>