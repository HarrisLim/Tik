<!DOCTYPE html>
<html>
	<head>
		<%- include header.ejs %>
		<script>
			window.onload = function() {
				$('#rangestart').calendar({
					type: 'date',
					endCalendar: $('#rangeend')
				});
				$('#rangeend').calendar({
					type: 'date',
					startCalendar: $('#rangestart')
				});
			};
		</script>
		<title>Ask</title>
	</head>
	<body>
		<%- include rightTop.ejs %>
		<br>
		<div class="ui container">
			<div class="ui form">
				<div class="required field">
				    <label>Name</label>
				    <input type="text" placeholder="name">
				</div>
				<div class="required field">
				    <label>E-mail</label>
				    <input type="email" placeholder="example@email.com">
				</div>
				<div class="two fields">
					<div class="required field">
					<label>Start date</label>
						<div class="ui calendar" id="rangestart">
							<div class="ui input left icon">
								<i class="calendar icon"></i>
								<input type="text" placeholder="START" id="startDate" name="startDate">
							</div>
						</div>
					</div>
					<div class="required field">
					<label>End date</label>
						<div class="ui calendar" id="rangeend">
							<div class="ui input left icon">
								<i class="calendar icon"></i>
								<input type="text" placeholder="END" id="endDate" name="endDate">
							</div>
						</div>
					</div>
				</div>
				<div class="required field">
				    <label>Travel area</label>
				    <input type="text" placeholder="seoul">
				</div>
				<div class="field">
				    <label>Accommodation</label>
				    <input type="text" placeholder="guesthouse, hotel or anywhere.">
				</div>
				<div class="field">
				    <label>Food</label>
				    <input type="text" placeholder="Bibimbap, Tteokbokki and anything you want.">
				</div>
				<div class="field">
				    <label>Activity</label>
				    <input type="text" placeholder="Going up N Seoul Tower or Experience a Hanbok.">
				</div>
				<div class="required field">
				    <label>Detail</label>
				    <textarea placeholder="Tell about your travel style."></textarea>
				</div>
				<div class="ui checkbox">
			        <input type="checkbox" tabindex="0" class="hidden">
			        <label>Yes, I upload review with photo in TiK after traveling.</label>
		      	</div>
		      	<div class="field" style="padding:30px 0px 40px; text-align:center">
		      		<input type="button" value="Travel in Korea !">
				</div>
		 	</div>
	  	</div>
	</body>
</html>